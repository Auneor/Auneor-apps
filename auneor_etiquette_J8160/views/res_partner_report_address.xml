<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="labels_layout">
        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>
    </template>

    <template id="labels_document">
        <t t-call="auneor_etiquette_J8160.labels_layout">
            <div class="page">
                <style type="text/css">
                    @font-face {
                    font-family: 'cour';
                    src: url('auneor_etiquette_J8160/static/font/courier.ttf');
                    }
                </style>
                <div style="width: 100%; font-family: cour; font-size: 15px;">
                    <t t-foreach="docs.sorted(key=lambda doc: (doc.country_id, doc.zip, doc.name))" t-as="p">
                        <div style="width: 32%; display: inline-block; vertical-align: top; padding: 25px; page-break-inside: avoid;">
                            <span t-field="p.parent_id.title.name"/> <span t-field="p.parent_id.name"/> <br t-if="p.parent_id.title.name or p.parent_id.name"/>
                            <span t-field="p.title.name"/> <span t-field="p.name"/> <br t-if="p.title.name or p.name"/>
                            <span t-field="p.street"/> <br t-if="p.street"/>
                            <span t-field="p.street2"/> <br t-if="p.street2"/>
                            <span t-field="p.zip"/> <span t-field="p.city"/>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="report_labels">
        <t t-call="report.html_container">
            <t t-call="auneor_etiquette_J8160.labels_document"/>
        </t>
    </template>
</odoo>
