<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="add_client_ref_view_quotation_tree" model="ir.ui.view">
            <field name="name">add.client.ref.quotation</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                  <field name="client_order_ref" string="Référence client"/>
                </xpath>
            </field>
        </record>

        <record id="add_client_ref_view_order_tree" model="ir.ui.view">
            <field name="name">add.client.ref.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                  <field name="client_order_ref" string="Référence client"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>