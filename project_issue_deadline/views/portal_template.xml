<odoo>
    <template id="my_issues_issue_deadline" name="Add deadline" inherit_id="website_project_issue.my_issues_issue">
        <xpath expr="//div[@class='mb8']" position="after">
            <div class="mb8">
                <strong>Estimated resolution date:</strong>
                <span t-field="issue.deadline" t-options='{"widget": "date"}'/>
            </div>
        </xpath>
    </template>

</odoo>