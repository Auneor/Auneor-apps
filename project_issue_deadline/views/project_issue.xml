<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="project_issue_deadline.form">
            <field name="name">project_issue_deadline.form</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_form_view"></field>
            <field name="arch" type="xml">
                <field name="tag_ids" position="after">
                    <field name="deadline"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="project_issue_deadline.tree">
            <field name="name">project_issue_deadline.tree</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_tree_view"></field>
            <field name="arch" type="xml">
                <field name="partner_id" position="replace">
                  <field name="partner_id" invisible="1"/>
		  <field name="is_open" invisible="1"/>
		  <field name="is_next" invisible="1"/>
		  		  <field name="is_late" invisible="1"/>


                    <field name="deadline"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project_issue_deadline.filter">
            <field name="name">project_issue_deadline.filter</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.view_project_issue_filter"></field>
            <field name="arch" type="xml">
              <field name="stage_id" position="after">
		<filter string="Late issues" name="late_issues" domain="[('is_late','=',True)]" />
		<filter string="Next 5 day issues" name="next_issues" domain="[('is_next','=',True)]" />
		

	      </field>
            </field>
        </record>


    </data>
</odoo>
