<odoo>
    <data>

        <record model="ir.ui.view" id="view_sale_order_line_pivot">
            <field name="name">sale.order.line.pivot</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <pivot string="Line analysis">
                    <field name="product_id" type="row"/>
                    <field name="price_subtotal" type="measure"/>
                </pivot>
            </field>
        </record>
        <record id="action_sol_pivot" model="ir.actions.act_window">
            <field name="name">Lines analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot</field>
        </record>

        <menuitem id="menu_sol"
                  action="action_sol_pivot" parent="sales_team.menu_sales"
                  sequence="110"/>

    </data>
</odoo>
